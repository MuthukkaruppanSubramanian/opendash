<div class="modal fade" id="color_pick">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" onclick="resetColor()" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Change Dashboard Colors</h4>
      </div>
      <div class="modal-body">
        <h2>Background Color</h2>
        <div class="input-group colorpicker-component demo demo-auto color" id="color_bg">
            <input type="text" value="<%= @db.bg %>" class="form-control" id="bg" />
            <span class="input-group-addon"><i></i></span>
        </div>
        <h2>Foreground (text) Color</h2>
        <div class="input-group colorpicker-component demo demo-auto color" id="color_fg">
            <input type="text" value="<%= @db.fg %>" class="form-control" id="fg" />
            <span class="input-group-addon"><i></i></span>
        </div>
      </div>
      <div class="modal-footer">
         <button type="button" class="btn btn-danger" onclick="resetColor()" data-dismiss="modal"><i class="fa fa-fw fa-warning"></i> Discard changes</button>
          <button type="button" class="btn btn-success" onclick="saveColor()" data-dismiss="modal"><i class="fa fa-fw fa-check"></i> Save changes</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->