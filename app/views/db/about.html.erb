  			<h2><i class="fa fa-fw fa-home"></i><%= link_to "Home", root_path %></h2>
  		</div>
  		<div class="col-xs-4">
  			<h2><i class="fa fa-fw fa-rocket"></i><%= link_to "ZUMH", "http://zumh.org" %></h2>
  		</div>
  		<div class="col-xs-4">
  			<h2><i class="fa fa-fw fa-github"></i><%= link_to "GitHub", "https://github.com/tizz98/opendash" %></h2>
